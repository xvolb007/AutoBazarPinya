@{
    ViewData["Title"] = "Seznam vozidel";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Seznam vozidel</h2>
    <a asp-action="Create" class="btn btn-success">+ Nové vozidlo</a>
</div>
<div class="table-responsive">
<table id="vehiclesTable" class="table table-striped align-middle w-100">
    <thead class="table-dark">
        <tr>
            <th>Výrobce</th>
            <th>Model</th>
            <th>Rok</th>
            <th>SPZ</th>
            <th>Stav</th>
            <th>Akce</th>
        </tr>
    </thead>
</table>
</div>

<partial name="_DeleteModal" />

@section Scripts {
    <partial name="_DeleteModalScript" />
    <script src="~/js/vehicles-table.js" asp-append-version="true"></script>
}
