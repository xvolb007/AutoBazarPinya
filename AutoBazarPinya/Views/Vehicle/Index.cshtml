@model IEnumerable<ViewModels.VehicleViewModel>

@{
    ViewData["Title"] = "Seznam vozidel";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Seznam vozidel</h2>
    <a asp-action="Create" class="btn btn-success">+ Nové vozidlo</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Zatím nejsou žádná vozidla v databázi.</div>
}
else
{
    <div class="table-responsive shadow-sm rounded-3" style="max-height: 70vh; overflow-y: auto;">
        <table class="table table-striped align-middle mb-0" id="vehiclesTable">
            <thead class="table-dark position-sticky top-0">
                <tr>
                    <th>Výrobce</th>
                    <th>Model</th>
                    <th>Rok</th>
                    <th>SPZ</th>
                    <th>Stav</th>
                    <th>Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in Model)
                {
                    <tr data-id="@v.Id">
                        <td>@v.Manufacturer</td>
                        <td>@v.Model</td>
                        <td>@v.Year</td>
                        <td>@v.LicensePlate</td>
                        <td>@v.Condition</td>
                        <td>
                            <a asp-action="Details"
                               asp-route-id="@v.Id"
                               asp-route-returnUrl="@Context.Request.Path"
                               class="btn btn-sm btn-outline-primary me-1">Detail</a>
                            <a asp-action="Edit"
                               asp-route-id="@v.Id"
                               asp-route-returnUrl="@Context.Request.Path"
                               class="btn btn-sm btn-outline-warning me-1">Upravit</a>

                            <button type="button"
                                    class="btn btn-sm btn-outline-danger"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteModal"
                                    data-id="@v.Id"
                                    data-spz="@v.LicensePlate">
                                Smazat
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<partial name="_DeleteModal" />

@section Scripts {
    <partial name="_DeleteModalScript" />
}
