@model ViewModels.VehicleViewModel

<input type="hidden" asp-for="Id" id="VehicleId" />
<div class="mb-3">
    <label asp-for="Manufacturer" class="form-label"></label>
    <input asp-for="Manufacturer" class="form-control" />
    <span asp-validation-for="Manufacturer" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Model" class="form-label"></label>
    <input asp-for="Model" class="form-control" />
    <span asp-validation-for="Model" class="text-danger"></span>
</div>

<div class="row">
    <div class="col-md-4 mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="col-md-4 mb-3">
        <label asp-for="Mileage" class="form-label"></label>
        <input asp-for="Mileage" class="form-control" />
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>
    <div class="col-md-4 mb-3">
        <label asp-for="LicensePlate" class="form-label"></label>
        <input asp-for="LicensePlate" class="form-control" id="LicensePlate" placeholder="např. 1AB 2345" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
        <small id="spz-feedback" class="form-text text-danger"></small>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-3">
        <label asp-for="Fuel" class="form-label"></label>
        <select asp-for="Fuel" class="form-select" asp-items="Html.GetEnumSelectList<Domain.Enums.FuelType>()"></select>
    </div>
    <div class="col-md-4 mb-3">
        <label asp-for="Body" class="form-label"></label>
        <select asp-for="Body" class="form-select" asp-items="Html.GetEnumSelectList<Domain.Enums.BodyType>()"></select>
    </div>
    <div class="col-md-4 mb-3">
        <label asp-for="Condition" class="form-label"></label>
        <select asp-for="Condition" class="form-select" asp-items="Html.GetEnumSelectList<Domain.Enums.VehicleCondition>()"></select>
    </div>
</div>

<div class="mb-3">
    <label asp-for="Notes" class="form-label"></label>
    <textarea asp-for="Notes" class="form-control"></textarea>
</div>