@model ViewModels.VehicleViewModel
@{
    ViewData["Title"] = "Smazat vozidlo";
}

<h2>Smazat vozidlo</h2>

<div class="alert alert-danger">
    Opravdu chcete smazat toto vozidlo?
</div>

<table class="table">
    <tr><th>Výrobce</th><td>@Model.Manufacturer</td></tr>
    <tr><th>Model</th><td>@Model.Model</td></tr>
    <tr><th>SPZ</th><td>@Model.LicensePlate</td></tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Ano, smazat</button>
    <a asp-action="Index" class="btn btn-secondary">Zrušit</a>
</form>
